%blockquote{ class: (status.is_retweet? ? "retweet" : "tweet") }

  - if status.is_retweet?
    %span.rt-icon &#9850;

  = format_status_text(status)

%small
  - if status.is_retweet?
    Retweeted @#{status.raw_hash[:retweeted_status][:user][:screen_name]}
  - else
    Tweeted
  = link_to status.twitter_url do
    %time{ datetime: status.tweeted_at.iso8601 }
      = time_ago_in_words(status.tweeted_at)
      ago
  via
  = status.source.html_safe
  - if status.is_reply?
    in
    = link_to "reply to @#{status.in_reply_to_screen_name}", status.in_reply_to_url
