%nav#navigation
  .wrapper
    .timeline
      %form
        %select{ name: "month" }
          %option Recent
          - tweet_dates(@oldest, @newest).each do |year, dates|
            %optgroup{ label: year }
              - dates.each do |date|
                %option{ value: date.strftime("%Y-%m"), selected: date == @date }= date.strftime("%B")
        %input{type: 'submit'}

    .search
      %form
        %input{type: 'search', results: '5', name: 'search'}
        %input{type: 'submit'}
    
    .sign-out
      = link_to "Sign out", sessions_path, method: :delete

%header

  .profile
    = link_to current_user.twitter_url, class: "avatar" do
      = image_tag current_user.avatar_url, alt: current_user.name
    %h1= current_user.display_name
    %small= "@#{current_user.name}"

%section{:role => "main"}

  - if @statuses.any?
    %ul
      = list_of @statuses do |status|
        = render status
  - else
    %ul
      %li
        No Tweets have been imported yet.

%footer
  .footer-icons &#9670; &#9670; &#9670;