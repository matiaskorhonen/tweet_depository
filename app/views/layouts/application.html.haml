!!!
- conditional_html
%head
  %meta{:charset => "utf-8"}
  %title= content_for?(:title) ? yield(:title) : "Tweet Depository"
  = csrf_meta_tags
  %meta{:content => "Archive your Tweets", :name => "description"}
  %meta{:content => "on", "http-equiv" => "cleartype"}
  %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
  %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}

  - if private_timeline?
    %meta{:content => "noindex, nofollow", :name => "robots"}
  - elsif is_search?
    %meta{:content => "noindex", :name => "robots"}

  - if @user.present?
    = favicon_link_tag @user.avatar_url
  - else
    = favicon_link_tag "/favicon.ico"

  = stylesheet_link_tag "global", media: "all"
    
  = javascript_include_tag "http://use.edgefonts.net/source-sans-pro:n4,i4,n6.js"
  = javascript_include_tag "application"

%body
  %article
    - if notice
      .flash.notice= notice
    - if alert
      .flash.alert= alert
    = yield
